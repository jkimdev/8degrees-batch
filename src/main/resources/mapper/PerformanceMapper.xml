<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jimmy.degreesbatch.Mapper.PerformanceMapper">
    <select id="findById" resultType="com.jimmy.degreesbatch.Model.PerformanceDto">
        SELECT *
        from performances
    </select>

    <select id="selectDistinctFC" resultType="String">
        SELECT DISTINCT (FACILITYID)
        from performances
    </select>

    <insert id="insertPerformance" parameterType="com.jimmy.degreesbatch.Model.PerformanceDetailDto">
        INSERT INTO performances(PERFORMANCEID,
                                 FACILITYID,
                                 TITLE,
                                 START_DATE,
                                 END_DATE,
                                 PLACE,
                                 ACTOR,
                                 CREW,
                                 RUNTIME,
                                 RATING,
                                 PRODUCER,
                                 PRICE,
                                 POSTER,
                                 STORY,
                                 GENRE,
                                 STATE,
                                 OPENRUN,
                                 PERFORMANCE_SCHEDULE)
        VALUES (#{mt20id},
                #{mt10id},
                SUBSTRING_INDEX(#{prfnm}, IF(LOCATE('[', #{prfnm}), '[', '('), 1),
                #{prfpdfrom},
                #{prfpdto},
                SUBSTRING_INDEX(#{fcltynm}, IF(LOCATE('[', #{fcltynm}), '[', '('), 1),
                #{prfcast},
                #{prfcrew},
                #{prfruntime},
                #{prfage},
                SUBSTRING_INDEX(#{entrpsnm}, IF(LOCATE('[', #{fcltynm}), '[', '('), 1),
                #{pcseguidance},
                #{poster},
                #{sty},
                #{genrenm},
                #{prfstate},
                #{openrun},
                #{dtguidance})
    </insert>

    <insert id="insertActor" parameterType="String">
        INSERT INTO actors(PERFORMANCEID,
                           NAME)
        VALUES (#{performanceId},
                REPLACE(REPLACE(LTRIM(#{name}), ' 등', ''), ' 외', ''))
    </insert>

    <delete id="deletePerformance">
        DELETE
        FROM performances
    </delete>

    <delete id="deleteActor">
        DELETE
        FROM actors
    </delete>

</mapper>